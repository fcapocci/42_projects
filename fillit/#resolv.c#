#include "fillit.h"

int		cmpt_tetri(t_tlist *start)
{
	t_tlist	*tmp;
	int		cmpt;

	cmpt = 0;
	tmp = start;
	while (tmp)
	{
		tmp = tmp->next;
		cmpt++;
	}
	return (cmpt);
}


